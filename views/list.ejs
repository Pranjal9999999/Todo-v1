
<%- include ("header") -%>

   <div class="box" id="heading">
      <h1><%=listTitle%></h1>
   </div>  
   <div class="box">
    
       
        <% newTodo.forEach(function(ele){%>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" onchange="this.form.submit()" name="checkbox" value=<%=ele._id%>></input>
                <p><%=ele.name%></p>
            </div>
            <input type="hidden" name="listName" value=<%=listTitle%>></input>
         </form>
       <% });%>
        
   

   </div>
   
    <div class="box">
        
        <form action= "/"  method="post" class="item">
            <input type="text" name="newItem" placeholder="New Todo Item">
            <button type="submit" name="list", value= <%=listTitle%> >+</button>
        </form>
    </div>
    <%- include ("footer")-%>
    

